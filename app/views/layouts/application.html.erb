<!DOCTYPE html>
<html>
  <head>
    <title>WouldYouRather</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>


  <body id="main_body_background_image">


    <div id="main_body_contents_container">


      <header id="nav_header" class="menu_item">


        <nav id="nav_bar">

            <% if @current_user.present? %>
              Welcome, <%= " #{@current_user.name}" %>,
              
              <h3 id="nav_h3" class="nav_bar_item">Would You Rather?</h3>
              |
              <%= link_to 'Profile', @current_user, class: "nav_bar_item" %>
              |
              <%= link_to 'Logout', login_path, method: 'delete', class: "nav_bar_item" %>
              |
              <%= link_to 'WYR: New', new_question_path, class: "nav_bar_item"  %>
              |

            <% else %>
            
              <%= link_to 'Login', login_path, class: "nav_bar_item" %>
              |
              <%= link_to 'Sign Up', new_user_path, class: "nav_bar_item" %>
            
            <% end %>   <!--  -->

            <div id="wyr_nav_container">
              <%= image_tag 'Artboard 1', id: "wyr_nav_emblem" %>

            </div>      <!--  -->
          
          <hr>


        </nav>

      </header> <!-- closes header -->
    
      <%= yield %>
          
      <footer id="main_footer" class="menu_item">
        <hr>
        &copy;2022. WillYolandaRing
      </footer> <!-- closes footer -->


    </div> <!-- closes main_body_contens_container -->


  </body> <!-- closes body -->

</html>
