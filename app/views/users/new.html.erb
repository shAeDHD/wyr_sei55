<h3>Create Account</h3>

<% if @user.errors.any? %>
  <strong>Please correct the following errors:</strong>
  <ul>
    <% @user.errors.full_messages.each do |issue| %>
      <li><%= issue %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @user, local: true do |f| %>

  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br><br>
  
  <%= f.label :email %>
  <br>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label :dob %>
  <br>
  <%= f.date_field :dob %>
  <br><br>
  
  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label :password_confirmation %>
  <br>
  <%= f.password_field :password_confirmation %>
  <br><br>

  <%= f.submit %>

<% end %>
